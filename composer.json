{
    "name": "progminer/php-datagen",
    "description": "Code generator for making data classes on PHP",
    "keywords": ["data", "class", "generator"],
    "license": "MIT",
    "authors": [
        {
            "name": "Eridan Domoratskiy",
            "email": "eridan200@mail.ru"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "progminer/jlex-php-lib": "master-dev",
        "progminer/php-datagen-lib": "master-dev",
        "nikic/php-parser": "^4.0.3",
        "symfony/console": "^4.0",
        "symfony/finder": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "PHPDataGen\\": "app"
        },
        "classmap": [
            "pdg-classes"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "install-deps": [
            "if [ ! -d jlex-php ] ; then git clone https://github.com/ProgMiner/jlex-php ; fi",

            "cd jlex-php && mvn package"
        ],
        "generate-lexer": [
            "for file in `find app -type f | grep -ox '.*\\.lex'` ; do java -jar jlex-php\/JLexPHP.jar -v $file `echo $file | grep -o '\\(.*\\.\\)*'`php ; done"
        ]
    },
    "bin": ["php-datagen"]
}
